<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_frameLayout_background"
    android:orientation="vertical"
    android:padding="@dimen/result_frameLayout_padding"
    tools:context=".fragments.ResultFragment">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/result_textView">

        <TextView
            android:id="@+id/result_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/result_textView_background"
            android:gravity="center"
            android:hint="@string/hello_blank_fragment"
            android:textSize="@dimen/result_textView_textSize" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/result_percentage_textView">

        <TextView
            android:id="@+id/percentage_correct_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/result_textView_background"
            android:gravity="center"
            android:hint="@string/hello_blank_fragment"
            android:textSize="@dimen/result_textView_textSize" />

    </android.support.v7.widget.CardView>

</FrameLayout>